<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MesajGonder">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mesajGuidlineYatay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mesajGuidlineYataySon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3782587" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mesajGuidlineYatay2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.17905473" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mesajGuidlineYatay3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.57" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mesajGuidlineYatay4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.77" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mesajGuidlineYatay5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9701493" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mesajGuidlineDikey1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mesajGuidlineDikey2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96" />

    <TextView
        android:id="@+id/textViewAciklama"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Aşağıdaki adreslerden bizlere ulaşabilirsiniz"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/mesajGuidlineYatay2"
        app:layout_constraintEnd_toStartOf="@+id/mesajGuidlineDikey2"
        app:layout_constraintStart_toStartOf="@+id/mesajGuidlineDikey1"
        app:layout_constraintTop_toTopOf="@+id/mesajGuidlineYatay1" />

    <TextView
        android:id="@+id/textViewFacebook"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:linksClickable="true"
        android:text="@string/facebook"
        android:autoLink="web"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textColorLink="#03A9F4"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/mesajGuidlineYataySon"
        app:layout_constraintEnd_toStartOf="@+id/mesajGuidlineDikey2"
        app:layout_constraintStart_toStartOf="@id/mesajGuidlineDikey1"
        app:layout_constraintTop_toTopOf="@+id/mesajGuidlineYatay2" />

    <TextView
        android:id="@+id/textViewTwitter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:linksClickable="true"
        android:textColorLink="#03A9F4"
        android:text="@string/twitter"
        android:autoLink="web"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewEposta"
        app:layout_constraintEnd_toStartOf="@+id/mesajGuidlineDikey2"
        app:layout_constraintStart_toStartOf="@id/mesajGuidlineDikey1"
        app:layout_constraintTop_toTopOf="@+id/mesajGuidlineYataySon" />



    <TextView
        android:id="@+id/textViewEposta"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:linksClickable="true"
        android:textColorLink="#03A9F4"
        android:text="@string/eposta"
        android:autoLink="web|email"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/mesajGuidlineYatay4"
        app:layout_constraintEnd_toStartOf="@+id/mesajGuidlineDikey2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mesajGuidlineDikey1"
        app:layout_constraintTop_toTopOf="@+id/mesajGuidlineYatay3"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textViewTelegram"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text="@string/telegram"
        android:textColorLink="#03A9F4"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/mesajGuidlineYatay5"
        app:layout_constraintEnd_toStartOf="@+id/mesajGuidlineDikey2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mesajGuidlineDikey1"
        app:layout_constraintTop_toTopOf="@+id/mesajGuidlineYatay4"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>